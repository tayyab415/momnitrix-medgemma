{
    "name": "momnitrix-qa-console",
    "version": "1.0.0",
    "private": true,
    "description": "Momnitrix watch-prototype QA console (TypeScript frontend)",
    "scripts": {
        "build": "esbuild src/main.ts --bundle --outfile=app.js --format=iife --target=es2020 --minify=false --sourcemap",
        "watch": "esbuild src/main.ts --bundle --outfile=app.js --format=iife --target=es2020 --watch --sourcemap",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "esbuild": "^0.24.0",
        "typescript": "^5.7.0",
        "vitest": "^3.0.0"
    }
}